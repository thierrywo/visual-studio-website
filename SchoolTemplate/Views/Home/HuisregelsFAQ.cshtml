@using SchoolTemplate.Database
@model HuisregelsFAQViewModel
@{
    ViewData["Title"] = "HuisregelsFAQ";
}

<div class="card-group-hfaq">
    <div class="card-group">
        <div class="card huisregelknop">
          <div class="huisregels">
            <h2>Huisregels</h2>
              @foreach (Huisregel huisregel in Model.huisregels)
              {
                <button class="accordion huisregelknop">@huisregel.Regel</button>
                <div class="panel huisregelknop">
                  <p>@huisregel.Toelichting</p>
                </div>
              }
              </div>
            </div>


        <div class="card FAQknop">
            <div class="FAQ">
                <h2>FAQ</h2>
                @foreach (FAQ faq in Model.faqs)
                {
                    <button class="accordion FAQknop">@faq.FAQtekst</button>
                    <div class="panel FAQknop">
                        <p>@faq.antwoord</p>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<script>
    var acc = document.getElementsByClassName("accordion");
    var i;

  for (i = 0; i < acc.length; i++) {
    acc[i].addEventListener("click", function () {
      this.classList.toggle("active");
      var panel = this.nextElementSibling;
      if (panel.style.display === "block") {
        panel.style.display = "none";
      } else {
        panel.style.display = "block";
      }
    });
  }</script>

